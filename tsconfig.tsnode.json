{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "types": [ "node" ]
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
      "config/webpack.config.ts"
    ]
}